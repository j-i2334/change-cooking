<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :ニックネーム %> <br />
          <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"例) cook太郎", maxlength:"20" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <br />
          <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字", maxlength:"20" %>
          <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
        </div>

        <div class="field">
          <%= f.label :パスワード（確認） %><br />
          <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい", maxlength:"30" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>