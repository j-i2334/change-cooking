<div class="contents row">
  <div class="container">
    <h2>ログイン</h2>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字", maxlength:"20" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: :form__btn %>
      </div>
    <% end %>
  </div>
</div>